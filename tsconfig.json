{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "types": [
            "node",
            "react",
            "sharepoint",
            "es6-promise"
        ]
    },
    "include": [
        "app/src/**/*"
    ],
    "exclude": [
